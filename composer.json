{
  "config": {
    "optimize-autoloader": true,
    "bin-dir": "vendor/bin",
    "process-timeout": 600
  },
  "require": {
    "php": "7.4.*|8.*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "psr/log": "^1.0",
    "monolog/monolog": "1.*",
    "mesilov/bitrix24-php-sdk": "2.0-alpha.3",
    "symfony/http-foundation": "5.*",
    "symfony/http-client": "5.*",
    "symfony/console": "5.*",
    "symfony/dotenv": "5.*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.*",
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "9.5.*",
    "symfony/debug-bundle": "5.*"
  },
  "autoload": {
    "psr-4": {
      "Rarus\\Interns\\BonusServer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rarus\\Interns\\BonusServer\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "phpunit-run-integration-tests": [
      "phpunit --colors=always --verbose --testsuite integration_tests"
    ]
  }
}